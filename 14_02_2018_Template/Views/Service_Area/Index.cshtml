@model IEnumerable<_14_02_2018_Template.Models.Service_Area>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

 <h2>
    @Html.ActionLink("Add New", "Create", null, new { @class = "btn btn-info" })
    Service Area
</h2>


<div class="card mb-3">
    <div class="card-header">
        <i class="fa fa-table"></i> Service Area Table
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.service_title)</th>
                        <th>@Html.DisplayNameFor(model => model.service_content)</th>
                        <th>@Html.DisplayNameFor(model => model.service_content_url)</th>
                        <th>@Html.DisplayNameFor(model => model.service_img)</th>
                        <th>Edit</th>
                        <th>Details</th>
                        <th>Delete</th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.service_title)</th>
                        <th>@Html.DisplayNameFor(model => model.service_content)</th>
                        <th>@Html.DisplayNameFor(model => model.service_content_url)</th>
                        <th>@Html.DisplayNameFor(model => model.service_img)</th>
                        <th>Edit</th>
                        <th>Details</th>
                        <th>Delete</th>
                    </tr>
                </tfoot>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.service_title</td>
                            <td> @item.service_content</td>
                            <td> @item.service_content_url</td>
                            <td><img src="~/Uploads/@item.service_img" width="100" /></td>
                            <td>
                                <a href="/Service_Area/Edit/@item.service_id" class="btn btn-warning" style="color:white"><i class="fas fa-pencil-alt"></i></a>
                            </td>
                            <td>
                                <a href="/Service_Area/Details/@item.service_id" class="btn btn-success"><i class="fas fa-info-circle"></i></a>
                            </td>
                            <td>
                                <a href="/Service_Area/Delete/@item.service_id" class="btn btn-danger"><i class="fas fa-trash-alt"></i></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <div class="card-footer small text-muted"></div>
</div>

