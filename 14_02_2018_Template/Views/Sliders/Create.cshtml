                @Html.ValidationMessageFor(model => model.slider_first_url, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.slider_second_url, htmlAttributes: new { @class = "control-label col-md-2" })
